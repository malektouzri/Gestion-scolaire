<html>
<head>
    {% block head %}
    {% endblock %}
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">

    <link rel="stylesheet" href="{{ asset('templateFront/assets/css/main.css') }}" />
</head>
<body class="is-preload">

<!-- Wrapper -->
<div id="wrapper">

    <!-- Main -->
    <div id="main">
        <div class="inner">

            <!-- Header -->
            <header id="header">
                <a href="{{ path('_espaceEns',{'id':e.id}) }}" class="logo"><strong>Gestion </strong>Scolaire</a>
                <ul class="actions small" style="margin-left: 600px">
                    <li>  <a href="{{ path('_home') }}" class="button primary small">Me déconnecter</a></li>
                </ul>
                <title>Espace Enseignant</title>
            </header>

            <!-- Content -->
            <section>
{% block body %}

    <div class="content">
        {% if app.session is not null and app.session.started %}
        {% for flashMessage in app.session.flashbag.get('Notice') %}
            <ul><li class="alert-success">
                    {{flashMessage}}
                </li></ul>
        {% endfor%}

        {% for flashMessage in app.session.flashbag.get('Erreur') %}
            <ul><li class="alert-danger">
                    {{flashMessage}}
                </li></ul>
        {% endfor%}
        {% endif %}
    </div>

    <a  href="{{ path('_espaceEns',{'id':e.id}) }}">Retour</a>
{{ form_start(form) }}
    <form method="post" >
        <label for="tel">Téléphone: </label>
        <input type="text" name="tel" id="tel"  value="{{ e.telephone }}" required/>
        <label for="adr">Adresse: </label>
        <input type="text" name="adr" id="adr"  value="{{ e.adresse }}" required/>
        <label for="mail">Email: </label>

        <input type="email" name="mail" id="mail"  value="{{ e.email }}" required/>


        {{ form_label(form.fichier,'Photo de profil:') }}
        {{ form_errors(form.fichier) }}
        {{ form_widget(form.fichier) }}

        <p>

        </p>
        <input type="submit" value="Valider" name="valider" id="valider">
    </form>
{{ form_end(form) }}
{% endblock %}
            </section>

        </div>
    </div>

    <!-- Sidebar -->
    <div id="sidebar">
        <div class="inner">


            <!-- Menu -->
            <nav id="menu">
                <header class="major">
                    <h2>Menu</h2>
                </header>
                <ul>
                    <li><a href="{{ path('_espaceEns',{'id':e.id}) }}">Accueil</a></li>
                    <li><a href="{{ path('_classeEns',{'id':e.id}) }}">Emplois classes</a></li>
                    <li><a href="{{ path('_planExam',{'id':e.id}) }}">Planning examen</a></li>
                    <li><a href="{{ path('_convParent',{'id':e.id}) }}">Convocation parent</a></li>

                    <li>
                        <span class="opener">Notes</span>
                        <ul>
                            <li><a href="{{ path('_ajoutNote',{'id':e.id}) }}">Ajouter note</a></li>
                            <li><a href="{{ path('_afficheNote',{'id':e.id}) }}">Consulter note</a></li>

                        </ul>
                    </li>
                    <li>
                        <span class="opener">Documents</span>
                        <ul>
                            <li><a href="{{ path('_ajoutDoc',{'id':e.id}) }}">Nouveau document</a></li>
                            <li><a href="{{ path('_afficheDoc',{'id':e.id}) }}">Mes documents</a></li>
                            <li><a href="{{ path('_rechDoc',{'id':e.id}) }}">Rechercher</a></li>
                        </ul>
                    </li>

                </ul>
            </nav>

            <!-- Section -->
            <section>
                <header class="major">
                    <h2>Contact</h2>
                </header>
                <ul class="contact">
                    <li class="fa-phone">{{ e.idEcole.telephone }}</li>
                    <li class="fa-home">{{ e.idEcole.adresse }}<br />
                    </li>
                    <li class="fa-mail-forward">{{ e.idEcole.email }}</li>
                </ul>
            </section>

            <!-- Footer -->
            <footer id="footer">
                <p class="copyright">&copy; Site pour gestion des écoles primaires .</p>
            </footer>

        </div>
    </div>

</div>

<!-- Scripts -->
<script src="{{ asset('templateFront/assets/js/jquery.min.js') }}"></script>
<script src={{ asset ("jquery-3.2.1.min.js") }}></script>
<script src="{{ asset("jquery-ui.min.js") }}"></script>
<script src="{{ asset('templateFront/assets/js/browser.min.js') }}"></script>
<script src="{{ asset('templateFront/assets/js/breakpoints.min.js') }}"></script>
<script src="{{ asset('templateFront/assets/js/util.js') }}"></script>
<script src="{{ asset('templateFront/assets/js/main.js') }}"></script>

</body>
</html>
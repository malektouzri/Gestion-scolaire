   <script type="text/javascript">

        function  ajouter(elmt) {

           var lastRow = elmt.rows.length;
           var i = lastRow;
           var row = elmt.insertRow(lastRow);

            var tailleMat = document.getElementById('matiere').options.length;
            var m = document.getElementById('matiere');
            var cellLeft = row.insertCell(0);
            var sel = document.createElement('select');
            sel.name = 'matiere'+i;
            sel.id = 'matiere'+i;

            var j;
            for(j=0; j<tailleMat; j++){
                sel.options[j] = new Option(m.options[j].innerHTML,m.options[j].value) ;
            }
            cellLeft.appendChild(sel);

            var e = document.getElementById('enseignant');
            var tailleEns = e.options.length;
            var cellRight = row.insertCell(1);
            var sel1 = document.createElement('select');
            sel1.name = 'enseignant'+i;
            sel1.id = 'enseignant'+i;

            var k;
            for(k=0; k<tailleEns; k++){
                sel1.options[k] = new Option(e.options[k].innerHTML, e.options[k].value);
            }
            cellRight.appendChild(sel1);


        }
        function supprimer(elmt) {
          var lastRow = elmt.rows.length;
          if (lastRow>2){
              elmt.deleteRow(lastRow - 1);
          }
        }


    </script>





<body >


<!-- Left Panel -->

<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">

        <div class="navbar-header">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>

        </div>


        <div id="main-menu" class="main-menu collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active">

                    <a href="{{ path('_ecoleAccueil') }}"> <i class="menu-icon fa fa-dashboard"></i>Dashboard</a>

                </li>
                <h3 class="menu-title">Gestion</h3><!-- /.menu-title -->
                <li class="menu-item-has-children dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-paper-plane"></i>Ecoles</a>
                    <ul class="sub-menu children dropdown-menu">
                        <li><i class="fa fa-plus-square"></i><a href="{{ path ('_ajoutEcole') }}">Créer</a></li>
                        <li><i class="fa fa-database"></i><a href="{{ path('_afficheEcole') }}">Afficher tout</a></li>
                        <li><i class="fa fa-search"></i><a href="{{ path('_rechercheEcole') }}">Rechercher</a></li>

                    </ul>
                </li>




            </ul>

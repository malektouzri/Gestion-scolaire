<!-- Right Panel -->

<div id="right-panel" class="right-panel">

    <!-- Header-->
    <header id="header" class="header">

        <div class="header-menu">

            <div class="col-sm-7">
                <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                <div class="header-left">


                    {% block head %}

                    {% endblock %}
                </div>

            </div>


            <div class="col-sm-5">

                <div class="user-area dropdown float-right">

                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img class="user-avatar rounded-circle" src="{{ asset ('templateAdmin/images/tn.png') }}" alt="User Avatar">
                    </a>


                </div>
               <a class="nav-link" href="{{ path('_home') }}"><i class="fa fa-power -off"></i>Se déconnecter</a>

            </div>
        </div>

    </header>

    {% block body %}


        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1> Ecoles</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li class="active"> Ecole</li>
                            <li class="active">Recherche</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            {% for flashMessage in app.session.flashbag.get('Notice') %}
                <ul><li class="alert-success">
                        {{flashMessage}}
                    </li></ul>
            {% endfor%}
            {% for flashMessage in app.session.flashbag.get('Erreur') %}
                <ul><li class="alert-danger">
                        {{flashMessage}}
                    </li></ul>
            {% endfor%}
            <br/>
        </div>
        <div class="content mt-3">
            <div class="col-lg-6">
                <div class="align-content-center">
                    <div class="card">
                        <div class="card-header">
                            <strong>Recherche </strong> Ecole
                        </div>

                        <div class="card-body card-block">

                            <form method="post" action="{{ path ('_rechercheEcole') }}" >


                                <div class="row form-group">
                                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Adresse:</label></div>
                                    <div class="col-12 col-md-9"><input type="text" id="adresse" name="adresse"  class="form-control" value="{{ a }}"></div>
                                </div>

                                <div class="card-footer">

                                    <input type="submit" value="Valider" class="btn btn-success btn-sm" id="valider" name="valider">

                                    <input type="button" value="Réinitialiser" class="btn btn-danger btn-sm" id="re" name="re">
                                </div>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-8">

            <div class="card-body card-block">
                <table class="table" >
                    <th>Nom utilisateur</th>
                    <th>Adresse</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                    {% for e in ec %}
                        <tr>
                            <td>{{ e.username }}</td>
                            <td>{{ e.adresse }}</td>
                            <td>{{ e.email }}</td>
                            <td>{{ e.telephone }}</td>
                            <td><a href="{{ path('_modifEcole2',{'id':e.id}) }}">Modifier</a></td>
                            <td><a onclick="return myDelete()" href="{{ path('_suppEcole',{'id':e.id}) }}">Supprimer</a></td>
                        </tr>
                    {% endfor %}

                </table>
            </div>
        </div>




        <script src={{ asset ("jquery-3.2.1.min.js") }}></script>
        <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">

        <script src="{{ asset("jquery-ui.min.js") }}"></script>
        <script type="text/javascript">

            $(function () {
                $('#re').click(function () {
                    $('#username').val("");
                    $('#adresse').val("");
                })
            })


            $(function () {
                $('#username').autocomplete({
                    source:function (request,response) {
                        $.ajax({
                            url: '{{ path('_usernameEcole') }}',
                            type: 'post',
                            dataType: 'json',
                            data: { 'search' : request.term },
                            success: function(data){
                                response(data);
                            }
                        });
                    },
                    select: function (event,ui) {
                        $('#username').val(ui.item.label);
                        return false;
                    }
                })
            })



        </script>
        <script type="text/javascript">
            $(function () {
                $('#adresse').autocomplete({
                    source:function (request,response) {
                        $.ajax({
                            url: '{{ path('_adresseEcole') }}',
                            type: 'post',
                            dataType: 'json',
                            data: { 'kaka' : request.term },
                            success: function(data){
                                response(data);
                            }
                        });
                    },
                    select: function (event,ui) {
                        $('#adresse').val(ui.item.label);
                        return false;
                    }
                })
            })
            </script>
        <script>

            function myDelete() {
                return confirm("Etes-vous sur de vouloir supprimer cette école?");

            }
        </script>


    {% endblock %}
</div><!-- /#right-panel -->

